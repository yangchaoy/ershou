@import '../../style/common.wxss';
.org-detail-img {
  padding: 12px 15px 10px;
}
.org-detail-list {
  float: left;
  width: 32.5%;
  /* height:146rpx; */
  height: 200rpx;
  margin-right: 1.25%;
  margin-bottom: 8rpx;
}
.org-detail-img image {
  display: block;
  /* height: 146rpx; */
  height: 200rpx;
  width: 100%;
}
.org-detail-img .org-detail-list:nth-child(3n) {
  float: right;
  margin-right: 0;
}
.org-detail-img:before {
  display: none;
}
.course-item-list {
  padding: 0px 15px 15px;
  border-top: none;
}
.border-bottom .weui-cell__bd {
  color: #868688;
}
.page {
  padding-bottom: 60px;
}
.brand-desc {
  padding: 0 20px;
  line-height: 22px;
  display: block;
  font-size: 16px;
  color: #969695;
}
.info-font-size {
  margin-top: 6px;
}
.info-font-size p {
  padding: 0 20px;
  line-height: 22px;
  display: block;
  font-size: 14px;
  color: #000;
  margin-bottom: 6px;
}

.weui-cells:before,.weui-cell:before {
  border-top: none;
  border-bottom: none;
}
.course-item-list p {
  color: #969695;
}