.slider-img-wrap,.slider-img-wrap image {
  height: 850rpx;
}
.show-org-info-wrap {
  margin: 10px 15px 0;
  padding: 10px 0;
  color: #969695;
  font-size: 16px;
  line-height: 24px;
  font-family: STHeiti SC Light, Microsoft YaHei, sans-serif;
}
.weui-cells:before,.weui-cell:before {
  border-top: none;
  border-bottom: none;
}
.show-video {
  width: 100%;
  height: 391rpx;
}
.org-detail-img {
  padding: 10px 15px 10px;
}
.org-detail-list {
  float: left;
  width: 32.5%;
  /* height: 146rpx; */
  height: 200rpx;
  margin-right: 1.25%;
  margin-bottom: 8rpx;
}
.org-detail-img image {
 display: block;
  /* height:146rpx; */
  height: 200rpx;
  width: 100%;
}
.org-detail-img .org-detail-list:nth-child(3n) {
  float: right;
  margin-right: 0;
}
.org-detail-img:before {
  display: none;
}
.weui-cell__ft {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  word-wrap:break-word; 
}
.weui-cell__bd {
  color: #828281;
}
.show-org-info-wrap p {
  /* text-indent: 1em; */
  display: block;
  margin-bottom: 15px;
}
.show-org-info-wrap p:last-child{
  margin-bottom: 0;
}

.show-video-wrap {
  position: relative;
  top: 0;
  left: 0;
}
.show-video-btn {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  left: 50%;
  margin-left: -40rpx;
  top: 50%;
  margin-top: -50rpx;
  z-index: 2;
}
.play-video-wrap {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  background-color: rgba(0,0,0,0.55);
  top: 0;left: 0;
}
.play-video-wrap .show-video {
  height: 391rpx;
  width: 100%;
  position: fixed;
  top: 50%;
  margin-top: -230rpx;
}