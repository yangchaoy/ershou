.page {
  padding-bottom: 80px;
}
.weui-input {
  font-size: 14px;
  height: 36px;
  line-height: 36px;
  min-height: 36px;
}
.input-weui {
  padding: 4px 15px 4px;
}
.input-age {
  padding: 14px 15px 12px;
}
.select-charge-pic-wrap {
  overflow: hidden;
  padding: 8px 15px;
}
.add-charge-pic{width:32%;height:221rpx;position:relative;top:0;left:0;border:1px #f2f3f7 solid}
.select-charge-pic-wrap {
	overflow: hidden;
	padding: 20rpx 30rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
}


.select-charge-pic-wrap image {
	width: 100%;
  height: 100%;
  display: block;
}

.select-charge-pic-wrap .charge-pic {
	position: relative;
	top: 0;
	left: 0;
  float: left;
  width: 32%;
  margin-right: 2%;
  height: 221rpx;
  margin-bottom: 20rpx;
}

.select-charge-pic-wrap .charge-pic abbr {
	position: absolute;
	top: -6px;
	right: -1px;
	width: 20px;
	height: 20px;
	border-radius: 100%;
	background-color: #ff5b5b;
	font-size: 20px;
	line-height: 20px;
	text-align: center;
	color: #fff;
	z-index: 2
}

.select-charge-pic-wrap .charge-pic abbr:after {
	content: '';
	position: absolute;
	top: 9px;
	left: 4px;
	height: 2px;
	width: 12px;
	background-color: #fff;
	z-index: 3
}

.select-charge-pic-wrap .add-charge-pic {
	width: 31%;
	height: 221rpx;
  float: left;
	position: relative;
	top: 0;
	left: 0;
	border: 1px #f2f3f7 solid;
  margin-bottom: 20rpx;
}

.select-charge-pic-wrap .add-charge-pic image {
	height: 100%;
	width: 100%;
	display: block;
}
.select-charge-pic-wrap .add-charge-pic,.select-charge-pic-wrap .charge-pic:last-child,.select-charge-pic-wrap .charge-pic:nth-child(3) {
	margin-right: 0
}
.weui-cells:before,.weui-cells:after,.weui-cell:after,.weui-cell:before {
  border: none;
}
.charge-name {line-height: 80rpx;font-size: 40rpx;color: #363638;height: 80rpx;}
.charge-info {padding: 10rpx 30rpx;display: block;width: auto;height: 180rpx;font-size: 28rpx;line-height: 36rpx;}
.choose-address {font-size: 32rpx;line-height: 32rpx;color: #363638;}
.choose-address image {width: 23rpx;height: 29rpx;position: relative;top: 4rpx;margin-right: 16rpx;}
.weui-check__hd_in-checkbox {font-size: 32rpx;color: #363638;}
